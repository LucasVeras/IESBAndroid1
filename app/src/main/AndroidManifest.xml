<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lucasveras.com.br.projetofinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.LoginActivity_"
            android:label="@string/login_title">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RegisterActivity_"
            android:label="@string/register_title"
            android:parentActivityName=".activities.LoginActivity_" />

        <activity
            android:name=".activities.ForgotPasswordActivity_"
            android:label="@string/forgot_password_title"
            android:parentActivityName=".activities.LoginActivity_" />

        <activity
            android:name=".activities.NewsListActivity_"
            android:label="@string/news_title"
            android:parentActivityName=".activities.LoginActivity_" />

        <activity
            android:name=".activities.NewsDetailActivity_"
            android:label="@string/news_detail_title"
            android:parentActivityName=".activities.NewsListActivity_" />

    </application>

</manifest>